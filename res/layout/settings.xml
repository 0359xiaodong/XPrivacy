<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:stretchColumns="1" >

            <TableRow>

                <TextView
                    android:text="@string/settings_serial"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etSerial"
                    android:hint="DEFACE"
                    android:inputType="textNoSuggestions" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/settings_lat"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etLat"
                    android:hint="-10.5"
                    android:inputType="numberDecimal|numberSigned" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/settings_lon"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etLon"
                    android:hint="105.667"
                    android:inputType="numberDecimal|numberSigned" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnSearch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@android:string/search_go" />

                <EditText
                    android:id="@+id/etSearch"
                    android:inputType="textNoSuggestions" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/settings_mac"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etMac"
                    android:digits="0123456789ABCDEF:"
                    android:hint="DE:FA:CE:DE:FA:CE"
                    android:inputType="textCapCharacters|textNoSuggestions"
                    android:maxLength="18" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/settings_imei"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etImei"
                    android:hint="000000000000000"
                    android:inputType="numberDecimal|textNoSuggestions"
                    android:maxLength="16" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/settings_phone"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etPhone"
                    android:hint="DEFACE"
                    android:inputType="textNoSuggestions|phone" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/settings_id"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etId"
                    android:digits="0123456789ABCDEF"
                    android:hint="DEFACE"
                    android:inputType="textCapCharacters|textNoSuggestions" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/settings_gsfid"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etGsfId"
                    android:digits="0123456789ABCDEF"
                    android:hint="DEFACE"
                    android:inputType="textCapCharacters|textNoSuggestions" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/settings_mcc"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etMcc"
                    android:hint="001"
                    android:inputType="numberDecimal|textNoSuggestions"
                    android:maxLength="3" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/settings_mnc"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etMnc"
                    android:hint="01"
                    android:inputType="numberDecimal|textNoSuggestions"
                    android:maxLength="3" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/settings_country"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etCountry"
                    android:digits="ABCDEFGHIJKLMNOPQRSTUVWXYZ"
                    android:hint="XX"
                    android:inputType="textCapCharacters|textNoSuggestions"
                    android:maxLength="2" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/settings_iccid"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etIccId"
                    android:inputType="numberDecimal|textNoSuggestions"
                    android:maxLength="20" />
            </TableRow>

            <TableRow>

                <TextView
                    android:text="@string/settings_subscriber"
                    android:textIsSelectable="false" />

                <EditText
                    android:id="@+id/etSubscriber"
                    android:inputType="numberDecimal|textNoSuggestions"
                    android:maxLength="15" />
            </TableRow>

            <TableRow>

                <Button
                    android:id="@+id/btnRandom"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="@string/msg_random" />
            </TableRow>

            <TableRow>

                <CheckBox
                    android:id="@+id/cbRandom"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="@string/msg_random_boot" />
            </TableRow>

            <TableRow>

                <CheckBox
                    android:id="@+id/cbFPermission"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="@string/settings_fpermission" />
            </TableRow>

            <TableRow>

                <CheckBox
                    android:id="@+id/cbFSystem"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_span="2"
                    android:text="@string/settings_fsystem" />
            </TableRow>
        </TableLayout>

        <Button
            android:id="@+id/btnOk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@android:string/ok" />
    </LinearLayout>

</ScrollView>